[Unit]
Description=Prints datacenter temperature on LED panel

[Service]
User=lab
Group=lab
Type=simple
Restart=on-failure
RestartSec=2
WorkingDirectory=/home/lab/monitorizacion_cpd/rpi1/scripts
ExecStart=/usr/bin/python3 /home/lab/monitorizacion_cpd/rpi1/scripts/led_display_temp.py
PIDFile=/tmp/cpd_temp.pid

[Install]
WantedBy=multi-user.target